<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Import Bootstrap CSS. -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        
        <!-- Import Bootstrap Javascript. -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </head>
    <body style="height:100vh">
        <div class="container-fluid"
            {% assign rowNum = 1 %}
            {% for row in collections.row %}
            <div class="p-3 row">
                <div class="col-sm-12">
                    <h2 class="p-3 mt-2 mb-2 bg-secondary text-white text-center">{{ row.data.title }}</h2>
                </div>
            </div>
            <div class="p-3 row">
                {% for colNum in (1..12) %}
                {% capture colNumWidth %}col{{ colNum }}Width{% endcapture %}
                {% if row.data[colNumWidth] > 0 %}
                {% capture colNumType %}col{{ colNum }}Type{% endcapture %}
                {% capture colNumURL %}col{{ colNum }}URL{% endcapture %}
                {% capture colNumLabel %}col{{ colNum }}Label{% endcapture %}
                <div class="col-sm-{{ row.data[colNumWidth] }}">
                    {% if row.data[colNumType] == "link" %}
                    <a href="{{ row.data[colNumURL] }}" target="_blank"><img src="icons/{{ rowNum }}-{{ colNum }}-icon.svg" width="100%"/></a>
                    <div class="p-0 mt-2 mb-2 bg-info text-white text-center"><a href="{{ row.data[colNumURL] }}" target="_blank">{{ row.data[colNumLabel] }}</a></div>
                    {% elsif row.data[colNumType] == "iframe" %}
                    <iframe src="{{ row.data[colNumURL] }}"></iframe>
                    {% endif %}
                </div>
                {% endif %}
                {% endfor %}
            </div>
            {% assign rowNum = rowNum | plus: 1 %}
            {% endfor %}
        </div>
    </body>
</html>
